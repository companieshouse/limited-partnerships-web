{% extends "layout.njk" %}

{% block content %}

	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">
			<h1 class="govuk-heading-l">{{ i18n.pageNotFound.title }}</h1>

			<p class="govuk-body">{{ i18n.pageNotFound.spelling }}</p>

			<p class="govuk-body">{{ i18n.pageNotFound.copiedAddress}}</p>

			<p class="govuk-body">{{ i18n.pageNotFound.movedPage }}</p>

			<!-- '| safe' ensure that text is unescaped, as it contains a hyperlink -->
			<p class="govuk-body">{{ i18n.pageNotFound.goToStartPage | safe }}</p>
		</div>
	</div>
{% endblock %}
