{% extends "layout.njk" %}

{% set principalPlaceOfBusinessKey = "principal_place_of_business_address" %}
{% if props.data.address %}
  {% set address = props.data.address %}
{% elif props.data.cache[principalPlaceOfBusinessKey] %}
  {% set address = props.data.cache[principalPlaceOfBusinessKey] %}
{% elif props.data.limitedPartnership.data.principal_place_of_business_address %}
  {% set address = props.data.principal_place_of_business_address %}
{% else %}
  {% set address = {} %}
{% endif %}

{% set pageTitle = i18n.address.enterAddress.principalPlaceOfBusinessAddress.title %}
{% set publicInformationLine1 = i18n.address.enterAddress.principalPlaceOfBusinessAddress.publicInformationLine1 %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "includes/proposed-name.njk" %}
      
      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-heading-xl">
            {{ pageTitle }}
            </h1>
        </legend>

        <p class="govuk-hint">{{ i18n.address.enterAddress.principalPlaceOfBusinessAddress.titleHint1 }}</p>
        <p class="govuk-hint">{{ i18n.address.enterAddress.principalPlaceOfBusinessAddress.titleHint2 }}</p>
        <p class="govuk-hint">{{ i18n.address.enterAddress.principalPlaceOfBusinessAddress.titleHint3 }}</p>
        
        <br>
      {% include "pages/address/enter-address-form.njk" %}
    </div>
  </div> 
{% endblock %}
