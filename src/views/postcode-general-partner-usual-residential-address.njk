{% extends "layout.njk" %}

{% if props.errors and props.errors.errorList.length > 0 %}  
  {% set pageTitle = i18n.error + i18n.address.findPostcode.generalPartner.usualResidentialAddress.whatIsUsualResidentialAddress %}
{% else %}
  {% set pageTitle = i18n.address.findPostcode.generalPartner.usualResidentialAddress.whatIsUsualResidentialAddress %}
{% endif %}

{% set publicRegisterInformationLine1 = i18n.address.findPostcode.generalPartner.usualResidentialAddress.publicRegisterLine1 %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "includes/errors.njk" %}

      <div>
        {% include "includes/general-partner-name.njk" %}

        <h1 class="govuk-heading-xl">{{ i18n.address.findPostcode.generalPartner.usualResidentialAddress.whatIsUsualResidentialAddress }}</h1>
      </div>

      {% include "pages/address/postcode-form.njk" %}

    <div>
      {% include "includes/public-register-information.njk" %}
    </div>
  </div>

{% endblock %}
