{% extends "layout.njk" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form class="form" action={{ props.currentUrl }} method="post">
        <input type="hidden" name="pageType" value={{ props.pageType }}>
      
        {% include "includes/csrf_token.njk" %}

        {{ govukRadios({
          classes: "govuk-radios",
          name: "parameter",
          fieldset: {
            legend: {
              text: i18n.whichTypePage.title,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--xl"
            }
          },
          items: [
            {
              value: "LP",
              text: i18n.whichTypePage.options.LP,
              attributes: {
                required: true
              }
            },
            {
              value: "PFLP",
              text: i18n.whichTypePage.options.PFLP,
              attributes: {
                required: true
              }
            },
            {
              value: "SLP",
              text: i18n.whichTypePage.options.SLP,
              attributes: {
                required: true
              }
            },
            {
              value: "SPFLP",
              text: i18n.whichTypePage.options.SPFLP,
              attributes: {
                required: true
              }
            },
            {
              value: "SQP",
              text: i18n.whichTypePage.options.SQP,
              attributes: {
                required: true
              }
            }
          ]
        }) }}

        {% include "includes/continue-button.njk" %} 
      </form>
    </div>
  </div>

{% endblock %}