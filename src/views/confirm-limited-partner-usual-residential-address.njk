{% extends "layout.njk" %}

{% set pageTitle = i18n.address.confirm.limitedPartnerUsualResidentialAddress.title %}
{% set publicRegisterInformationLine1 = i18n.address.confirm.limitedPartnerUsualResidentialAddress.publicRegisterLine1 %}
{% set cacheKey = props.data.addressCacheKey %}
{% set data = props.data.limitedPartner.data.usual_residential_address %}

{% block backLink %}
  {% set hrefValue = props.previousUrl %}

  {% if props.data.cache.ura_territory_choice == "overseas" and not props.data.limitedPartner.data.kind == "limited-partnership#update-limited-partner-person" %}
    {% set hrefValue = props.currentUrl | replace(props.pageType, props.data.enterManualAddressPageType) %}
  {% endif %}

  {{ govukBackLink({
    text: i18n.links.back,
    attributes: {
      "data-event-id": "back-link"
    },
    href: hrefValue
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "includes/errors.njk" %}
      {% include "includes/limited-partner-name.njk" %}

      {% include "pages/address/confirm-address-form.njk" %}
    </div>
  </div> 
{% endblock %}
