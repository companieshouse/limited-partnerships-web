{% extends "layout.njk" %}

{% from "web-security-node/components/csrf-error/macro.njk" import csrfError %}

{% set pageTitle = i18n.errorPage.title  %}

{% block content %}
  {% if csrfErrors %}
    {{
      csrfError({})
    }}
  {% else %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">{{ i18n.errorPage.title }}</h1>
        <p class="govuk-body">{{ i18n.errorPage.tryLater }}</p>

			  <!-- '| safe' ensure that text is unescaped, as it contains a hyperlink -->
        <p class="govuk-body">{{ i18n.errorPage.moreInfo | safe }}</p>
      </div>
    </div>
  {% endif %}    
{% endblock %}