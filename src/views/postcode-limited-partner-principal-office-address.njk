{% extends "layout.njk" %}

{% if props.errors and props.errors.errorList.length > 0 %}  
  {% set pageTitle = i18n.error + i18n.address.findPostcode.limitedPartner.principalOfficeAddress.whatIsPrincipalOfficeAddress %}
{% else %}
  {% set pageTitle = i18n.address.findPostcode.limitedPartner.principalOfficeAddress.whatIsPrincipalOfficeAddress %}
{% endif %}

{% set publicRegisterInformationLine1 = i18n.address.findPostcode.limitedPartner.principalOfficeAddress.publicRegisterLine1 %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "includes/errors.njk" %}

      <div>
        {% include "includes/limited-partner-name.njk" %}

        <h1 class="govuk-heading-xl">{{ i18n.address.findPostcode.limitedPartner.principalOfficeAddress.whatIsPrincipalOfficeAddress }}</h1>
        <p class="govuk-hint">{{ i18n.address.findPostcode.limitedPartner.principalOfficeAddress.hint }}</p>
      </div>

      {% include "pages/address/postcode-form.njk" %}

    <div>
      {% include "includes/public-register-information.njk" %}
    </div>
  </div>

{% endblock %}
