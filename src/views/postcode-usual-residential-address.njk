{% extends "layout.njk" %}

{# to be moved in general-partner-usual-residential-address-choice #}
{% block backLink %}
  {% if props.data.generalPartner.data.forename %}
    {% set hrefValue = props.currentUrl | replace(props.pageType, "add-general-partner-person") %}
  {% elif props.data.generalPartner.data.legal_entity_name %}
    {% set hrefValue = props.currentUrl | replace(props.pageType, "add-general-partner-legal-entity") %}
  {% else %}
     {% set hrefValue = props.previousUrl %}
  {% endif %}

  {{ govukBackLink({
    text: "Back",
    attributes: {
      "data-event-id": "back-link"
    },
    href: hrefValue
  }) }}
{% endblock %}

{% set pageTitle = i18n.address.findPostcode.usualResidentialAddress.whatIsUsualResidentialAddress %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "includes/errors.njk" %}

      <div>
        {% include "includes/general-partner-name.njk" %}

        <h1 class="govuk-heading-xl">{{ i18n.address.findPostcode.usualResidentialAddress.whatIsUsualResidentialAddress }}</h1>
      </div>

      {% include "pages/address/postcode-form.njk" %}

    <div>
      {{ govukInsetText({
        html: "<h2 class='govuk-heading-m'>" + i18n.address.findPostcode.usualResidentialAddress.publicRegisterTitle | escape + "</h2> <p>" + i18n.address.findPostcode.usualResidentialAddress.publicRegisterLine1 | escape + "</p>"
      }) }}
    </div>
  </div>

{% endblock %}
